    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        class Product {

            private String ID;
            private String name;
            private double price;

            public Product(String id, String n, double p) {
                ID = id;
                name = n;
                price = p;
            }

            public double getPrice() {
                return price;
            }

            @Override
            public String toString() {
                return ID + "," + name + "," + price;
            }
        }
        Product[] p = new Product[10];
        p[0] = new Product("002", "A", 10.0);
        p[1] = new Product("001", "B", 20.0);
        p[2] = new Product("005", "C", 30.0);
        p[3] = new Product("003", "D", 40.0);
        p[4] = new Product("007", "E", 50.0);
        p[5] = new Product("009", "F", 60.0);
        p[6] = new Product("004", "G", 70.0);
        p[7] = new Product("008", "H", 80.0);
        p[8] = new Product("010", "I", 90.0);
        p[9] = new Product("006", "J", 100.0);
        PrintWriter writer;
        try {
            writer = new PrintWriter("c:/data.ser");
            for (Product x : p) {
                writer.println(x.toString());
            }
            writer.close();
        } catch (IOException ex) {
            System.out.println(ex.getMessage());
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        class Product {

            private String name;
            private double price;
            private String ID;

            public Product(String id, String n, double p) {
                ID = id;
                name = n;
                price = p;
            }

            public String toString() {
                return ID + "," + name + "," + price;
            }
        }
        try {
            double sum = 0;
            FileReader file = new FileReader("c:/data.ser");
            BufferedReader reader = new BufferedReader(file);
            Product[] q = new Product[10];
            for (int i = 0; i < 10; i++) {
                String[] str = reader.readLine().split(",");
                q[i] = new Product(str[0], str[1], Double.valueOf(str[2]));
            }
            file.close();
            reader.close();
            for (Product x : q) {
                sum += x.price;
            }
            jTextField1.setText(String.valueOf(sum / 10));
        } catch (IOException ex) {

        }
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        class Product implements Comparable<Object> {

            private String ID;
            private String name;
            private double price;

            public Product(String id, String n, double p) {
                ID = id;
                name = n;
                price = p;
            }

            public String toString() {
                return ID + "," + name + "," + price;
            }

            public String getID() {
                return ID;
            }

            @Override
            public int compareTo(Object o) {
                return this.getID().compareTo(o.toString());
            }
        }
        try {
            double sum = 0;
            FileReader file = new FileReader("c:/data.ser");
            BufferedReader reader = new BufferedReader(file);
            Product[] q = new Product[10];
            for (int i = 0; i < 10; i++) {
                String[] str = reader.readLine().split(",");;
                q[i] = new Product(str[0], str[1], Double.valueOf(str[2]));
            }
            file.close();
            reader.close();
            Arrays.sort(q);
            String search = jTextField2.getText();
            int index = Arrays.binarySearch(q, search);
            jTextField3.setText(q[index].toString());
        } catch (IOException ex) {

        }
    }                                        

